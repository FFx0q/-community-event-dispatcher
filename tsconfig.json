{
    "compilerOptions": {
        "target": "esnext",                          
        "module": "commonjs",                    
        "lib": ["esnext"],                     
        "allowJs": true,
        "outDir": "lib",                          
        "rootDir": "src",
        "strict": true,         
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests", ]
}